	<flow name="mcp-tool-getPlatformMetricsByCollector-flow" doc:id="74fdde6f-5b41-4c04-9beb-48f2d7b0665b" >
		<mcp:tool-listener doc:name="Tool Listener" doc:id="5f73ac99-6463-48a9-9f51-9adc5eb46914" config-ref="MCP_Server" name="getPlatformMetricsByCollector">
			<mcp:description ><![CDATA[Retrieves platform metrics for a specific collector.
]]></mcp:description>
			<mcp:parameters-schema ><![CDATA[{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "collectorId": {
      "type": "string",
      "description": "Identifier of the collector to fetch metrics from"
    },
    "bg": {
      "type": "string",
      "description": "Business group identifier"
    },
    "environment": {
      "type": "string",
      "description": "Optional environment filter (e.g., production, sandbox)"
    },
    "region": {
      "type": "string",
      "description": "Optional region filter (e.g., us-east-1, eu-west-2)"
    }
  },
  "required": [
    "collectorId",
    "bg"
  ]
}]]></mcp:parameters-schema>
			<mcp:responses >
				<mcp:text-tool-response-content text="#[payload.^raw]" />
			</mcp:responses>
		</mcp:tool-listener>
		<flow-ref doc:name="getPlatformMetricsByCollector Implementation" doc:id="2954f765-4838-4d31-94b1-579fb497e958" name="mcp-tool-impl-getPlatformMetricsByCollector-subflow"/>
